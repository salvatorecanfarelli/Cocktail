<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sfondo_register"
    tools:context=".fragments.DetailCocktail">

    <TextView
        android:id="@+id/nomeDrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOME DRINK"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/imageDrink"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp">

    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORIA: "
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIPO: "
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/glass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BICCHIERE: "
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/categoriaDrink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATEGORIA"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tipoDrink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALCOLICO O NO"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/glassDrink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BICCHIERE"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/istruzioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISTRUZIONI"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTI: "
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/ingrediente1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTE1"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/ingrediente2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTE2"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/ingrediente3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTE3"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/ingrediente4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTE4"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/misure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:text="MISURE1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/misure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="MISURE2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/misure3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="MISURE3"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/misure4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="MISURE4"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
